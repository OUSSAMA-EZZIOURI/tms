<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--FDP Tree View-->
    <record id="fdp_view_tree" model="ir.ui.view">
        <field name="name">transport.fdp.tree</field>
        <field name="model">transport.fdp</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Final Delivery Point"/>
                <field name="customer" string="Final Customer"/>
                <field name="country_id" string="Country" />
                <!-- <field name="country_id.code" string="Company" /> -->
            </tree>
        </field>
    </record>

    <!--FDP Form View-->
    <record id="fdp_view_form" model="ir.ui.view">
        <field name="name">transport.fdp.form</field>
        <field name="model">transport.fdp</field>
        <field name="arch" type="xml">
        <form string="Final Delivery">
            <sheet>
                <group string="Final Delivery details">
                    <group>
                        <field name="name" string="Final Delivery Point"/>
                        <field name="customer" string="Final Customer"/>
                        <field name="country_id" string="Country" />
                    </group>
                </group>
            </sheet>
        </form>
        </field>
    </record>
</odoo>
